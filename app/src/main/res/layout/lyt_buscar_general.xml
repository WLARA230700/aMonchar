<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:backgroundTint="@color/fondo"
    tools:context=".act_buscar_general">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/logo3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_amonchar" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@Marian0911"
                android:textAlignment="textEnd"
                android:textColor="#1A1A1A" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Tiempo de comida"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDesayuno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_bold"
                        android:padding="0dp"
                        android:stateListAnimator="@null"
                        android:text="@string/tc_desayunos"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        app:cornerRadius="20dp" />

                    <Button
                        android:id="@+id/btnAlmuerzo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_bold"
                        android:padding="0dp"
                        android:stateListAnimator="@null"
                        android:text="@string/tc_almuerzos"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        app:cornerRadius="20dp" />

                    <Button
                        android:id="@+id/btnCena"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_bold"
                        android:padding="0dp"
                        android:stateListAnimator="@null"
                        android:text="@string/tc_cenas"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        app:cornerRadius="20dp" />

                    <Button
                        android:id="@+id/btnMerienda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_bold"
                        android:padding="0dp"
                        android:stateListAnimator="@null"
                        android:text="@string/tc_meriendas"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        app:cornerRadius="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <EditText
                        android:id="@+id/txtBuscarReceta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="90"
                        android:background="@drawable/background_item_light_gray"
                        android:drawablePadding="15dp"
                        android:ems="10"
                        android:fontFamily="@font/poppins"
                        android:hint="Buscar receta"
                        android:inputType="textPersonName"
                        android:padding="15dp"
                        android:textColor="@color/texto"
                        android:textColorHint="@color/texto"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnBuscarTexto"
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="10"
                        android:drawableRight="@drawable/ic_buscar_gris"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView29"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="¡Dinos que "
                                    android:textColor="#1A1A1A"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/textView24"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/poppins_bold"
                                    android:text="ingredientes tienes,"
                                    android:textColor="@color/amarilloBase"
                                    android:textSize="15sp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtBuscado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_bold"
                                android:text="encontramos una receta para ti!"
                                android:textColor="#1A1A1A"
                                android:textSize="15sp" />

                            <Button
                                android:id="@+id/btnBuscarIngredientes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_bold"
                                android:stateListAnimator="@null"
                                android:text="Buscar por ingrediente"
                                android:textAllCaps="false"
                                android:textSize="12sp"
                                app:cornerRadius="20dp" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:paddingLeft="15sp"
                            android:paddingTop="7sp"
                            android:paddingBottom="7sp"
                            app:srcCompat="@drawable/ic_chile___bandeja" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Categoría"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:weightSum="100">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="50"
                        app:cardCornerRadius="20dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imgDesayuno"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/vegetariano" />

                            <TextView
                                android:id="@+id/txtVegetariano"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#99000000"
                                android:fontFamily="@font/poppins_bold"
                                android:paddingTop="33dp"
                                android:paddingBottom="33dp"
                                android:text="@string/cat_vegetariano"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="#f5f5f5"
                                android:textSize="15dp" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="50"
                        app:cardCornerRadius="20dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/fondo">

                            <ImageView
                                android:id="@+id/imgDesayuno"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/mar" />

                            <TextView
                                android:id="@+id/txtCatDesayuno"
                                android:id="@+id/txtMar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#99000000"
                                android:fontFamily="@font/poppins_bold"
                                android:paddingTop="33dp"
                                android:paddingBottom="33dp"
                                android:text="@string/cat_mar"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="#f5f5f5"
                                android:textSize="15dp" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:weightSum="100">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="50"
                        app:cardCornerRadius="20dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imgDesayuno"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/carnes_rojas" />

                            <TextView
                                android:id="@+id/txtCarnesRojas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#99000000"
                                android:fontFamily="@font/poppins_bold"
                                android:paddingTop="33dp"
                                android:paddingBottom="33dp"
                                android:text="@string/cat_carnes_rojas"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="#f5f5f5"
                                android:textSize="15dp" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="50"
                        app:cardCornerRadius="20dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imgDesayuno"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/carnes_blancas" />

                            <TextView
                                android:id="@+id/txtCarnesBlancas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#99000000"
                                android:fontFamily="@font/poppins_bold"
                                android:paddingTop="33dp"
                                android:paddingBottom="33dp"
                                android:text="@string/cat_carnes_blancas"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="#f5f5f5"
                                android:textSize="15dp" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:weightSum="100">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="50"
                        app:cardCornerRadius="20dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imgDesayuno"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/postres" />

                            <TextView
                                android:id="@+id/txtPostres"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#99000000"
                                android:fontFamily="@font/poppins_bold"
                                android:paddingTop="33dp"
                                android:paddingBottom="33dp"
                                android:text="@string/cat_postres"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="#f5f5f5"
                                android:textSize="15dp" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="50"
                        app:cardCornerRadius="20dp">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imgDesayuno"
                                android:layout_width="match_parent"
                                android:layout_height="90dp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/bebidas" />

                            <TextView
                                android:id="@+id/txtBebidas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#99000000"
                                android:fontFamily="@font/poppins_bold"
                                android:paddingTop="33dp"
                                android:paddingBottom="33dp"
                                android:text="@string/cat_bebidas"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="#f5f5f5"
                                android:textSize="15dp" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:id="@+id/navBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/bottomNav"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                app:srcCompat="@drawable/bottom_nav" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="90">

                <ImageView
                    android:id="@+id/icBuscar"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="30"
                    app:srcCompat="@drawable/ic_search" />

                <ImageView
                    android:id="@+id/icInicio"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="30"
                    app:srcCompat="@drawable/ic_utensils_solid" />

                <ImageView
                    android:id="@+id/icListaCompra"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="30"
                    app:srcCompat="@drawable/ic_lista" />

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>