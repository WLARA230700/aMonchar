<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".act_inicio">

    <LinearLayout
        android:id="@+id/LogoYUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_amonchar" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnCerrarSesion"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_weight="100"
            app:srcCompat="@drawable/ic_power" />

        <ImageView
            android:id="@+id/icUsuario"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/ic_user" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LogoYUsuario">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="70dp">

            <TextView
                android:id="@+id/lbHolaUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Â¡Hola Mariano!"
                android:textAlignment="textStart"
                android:textColor="#666666"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/lbInicio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Prepara tu propia comida,"
                android:textAlignment="viewStart"
                android:textColor="#191919"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbInicio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="disfruta de diferentes"
                    android:textAlignment="viewStart"
                    android:textColor="#191919"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/lbInicio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text=" sabores."
                    android:textAlignment="viewStart"
                    android:textColor="@color/amarilloBase"
                    android:textSize="16dp" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgTiemposComida"
                            android:layout_width="200dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="5dp"
                            app:srcCompat="@drawable/custom_foto_inicio" />

                        <TextView
                            android:id="@+id/txtVegetariano"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:padding="22dp"
                            android:text="@string/tc_desayunos"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#f5f5f5"
                            android:textSize="15dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgTiemposComida"
                            android:layout_width="200dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="5dp"
                            app:srcCompat="@drawable/custom_foto_inicio" />

                        <TextView
                            android:id="@+id/txtVegetariano"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins_bold"
                            android:padding="22dp"
                            android:text="@string/tc_meriendas"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#f5f5f5"
                            android:textSize="15dp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgTiemposComida"
                            android:layout_width="200dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="5dp"
                            app:srcCompat="@drawable/custom_foto_inicio" />

                        <TextView
                            android:id="@+id/txtVegetariano"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins_bold"
                            android:padding="22dp"
                            android:text="@string/tc_almuerzos"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#f5f5f5"
                            android:textSize="15dp" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imgTiemposComida"
                            android:layout_width="200dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="5dp"
                            app:srcCompat="@drawable/custom_foto_inicio" />

                        <TextView
                            android:id="@+id/txtVegetariano"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/poppins_bold"
                            android:padding="22dp"
                            android:text="@string/tc_cenas"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#f5f5f5"
                            android:textSize="15dp" />
                    </FrameLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <GridLayout
                android:id="@+id/gridRecetas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:columnCount="2"
                android:paddingBottom="70dp">

            </GridLayout>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/navBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            app:srcCompat="@drawable/bottom_nav" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="90">

            <ImageView
                android:id="@+id/icBuscar"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="10dp"
                android:layout_weight="30"
                app:srcCompat="@drawable/ic_search" />

            <ImageView
                android:id="@+id/icInicio"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="10dp"
                android:layout_weight="30"
                app:srcCompat="@drawable/ic_utensils_solid" />

            <ImageView
                android:id="@+id/icListaCompra"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="10dp"
                android:layout_weight="30"
                app:srcCompat="@drawable/ic_lista" />

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>